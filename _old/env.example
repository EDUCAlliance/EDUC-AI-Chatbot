# Nextcloud Bot Configuration
BOT_TOKEN=your_nextcloud_bot_token_here
NC_URL=your-nextcloud-domain.com

# GWDG AI API Configuration
AI_API_KEY=your_gwdg_api_key_here
AI_API_ENDPOINT=https://chat-ai.academiccloud.de/v1/chat/completions
EMBEDDING_API_ENDPOINT=https://chat-ai.academiccloud.de/v1/embeddings
MODELS_API_ENDPOINT=https://chat-ai.academiccloud.de/v1/models
DOCUMENTS_API_ENDPOINT=https://chat-ai.academiccloud.de/v1/documents

# Admin Panel Configuration
ADMIN_PASSWORD=your_secure_admin_password
ADMIN_SESSION_TIMEOUT=3600

# RAG Configuration
USE_RAG=true
RAG_TOP_K=5
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200
RAG_BATCH_SIZE=50
EMBEDDING_MODEL=e5-mistral-7b-instruct

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=txt,md,pdf,docx,html,csv,json
UPLOAD_DIR=uploads

# System Configuration
APP_NAME=EDUC AI TalkBot Enhanced
APP_VERSION=2.0.0
DEBUG_MODE=false
LOG_LEVEL=INFO
TIMEZONE=Europe/Berlin

# Security Configuration
CSRF_TOKEN_EXPIRY=3600
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_TIME=900

# Performance Configuration
CACHE_ENABLED=true
CACHE_TTL=3600

# Note: Database configuration is automatically provided by Cloudron:
# CLOUDRON_POSTGRESQL_HOST, CLOUDRON_POSTGRESQL_PORT, etc. 