{
    "name": "educ/nextcloud-ai-chatbot-enhanced",
    "description": "Enhanced AI-powered Nextcloud chatbot with PostgreSQL and advanced RAG capabilities",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "EDUC Alliance",
            "email": "contact@educ-alliance.org"
        }
    ],
    "autoload": {
        "psr-4": {
            "EDUC\\": "src/"
        }
    },
    "require": {
        "php": ">=8.1",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-pdo": "*",
        "ext-pdo_pgsql": "*",
        "ext-fileinfo": "*",
        "ext-zip": "*",
        "ext-mbstring": "*",
        "ext-gd": "*",
        "ramsey/uuid": "^4.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "scripts": {
        "post-install-cmd": [
            "mkdir -p uploads cache logs",
            "chmod 755 uploads cache logs"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
} 