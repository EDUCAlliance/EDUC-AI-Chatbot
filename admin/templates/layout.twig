{% include "_header.twig" %}

{% if session.admin_logged_in %}
<aside class="admin-sidebar">
    <div class="sidebar-header">
        <h2>EDUC AI Bot</h2>
        <p>Admin Panel</p>
    </div>
    
    <nav class="menu">
        <p class="menu-label">General</p>
        <ul class="menu-list">
            <li><a href="{{ url_for('dashboard') }}" class="{{ currentPage == 'dashboard' ? 'is-active' : '' }}">Dashboard</a></li>
            <li><a href="{{ url_for('documents') }}" class="{{ currentPage == 'documents' ? 'is-active' : '' }}">Documents</a></li>
        </ul>
        
        <p class="menu-label">Configuration</p>
        <ul class="menu-list">
            <li><a href="{{ url_for('models') }}" class="{{ currentPage == 'models' ? 'is-active' : '' }}">Models</a></li>
            <li><a href="{{ url_for('prompt') }}" class="{{ currentPage == 'prompt' ? 'is-active' : '' }}">System Prompt</a></li>
            <li><a href="{{ url_for('onboarding') }}" class="{{ currentPage == 'onboarding' ? 'is-active' : '' }}">Onboarding</a></li>
            <li><a href="{{ url_for('rag-settings') }}" class="{{ currentPage == 'rag-settings' ? 'is-active' : '' }}">RAG Settings</a></li>
        </ul>
        
        <p class="menu-label">System</p>
        <ul class="menu-list">
            <li><a href="{{ url_for('logs') }}" class="{{ currentPage == 'logs' ? 'is-active' : '' }}">Logs</a></li>
        </ul>
        
        <p class="menu-label">Account</p>
        <ul class="menu-list">
            <li><a href="{{ url_for('logout') }}">Logout</a></li>
        </ul>
    </nav>
</aside>
{% endif %}

<main class="main-content">
    <div class="content-wrapper">
        {% if session.admin_logged_in %}
        <div class="page-header">
            <h1 class="title">{% block heading %}{% endblock %}</h1>
        </div>
        {% endif %}
        
        {% block content %}{% endblock %}
    </div>
</main>

{% include "_footer.twig" %} 