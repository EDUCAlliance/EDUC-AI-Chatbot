# EDUC AI TalkBot Enhanced - Cloudron Environment Configuration
# Copy this file and configure the values in your Cloudron app settings

# REQUIRED: GWDG SAIA API Configuration
AI_API_KEY=your_gwdg_saia_api_key_here
AI_API_ENDPOINT=https://chat.hpc.gwdg.de/v1/chat/completions
EMBEDDING_API_ENDPOINT=https://chat.hpc.gwdg.de/v1/embeddings
MODELS_API_ENDPOINT=https://chat.hpc.gwdg.de/v1/models

# REQUIRED: Nextcloud Integration
BOT_TOKEN=your_nextcloud_bot_token_here
NC_URL=your-nextcloud-domain.com

# REQUIRED: Admin Panel Access
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_admin_password_here

# OPTIONAL: Application Settings
APP_NAME=EDUC-AI-Chatbot
DEBUG_MODE=false
LOG_LEVEL=INFO

# OPTIONAL: RAG Configuration
USE_RAG=true
RAG_TOP_K=5
RAG_SIMILARITY_THRESHOLD=0.7

# OPTIONAL: File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=txt,md,pdf,docx,html,csv,json

# OPTIONAL: Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# OPTIONAL: Security
ALLOWED_DOMAINS=your-domain.com
SESSION_TIMEOUT=3600

# NOTE: Database settings are automatically configured by Cloudron
# The following variables are provided by Cloudron automatically:
# - CLOUDRON_POSTGRESQL_HOST
# - CLOUDRON_POSTGRESQL_PORT  
